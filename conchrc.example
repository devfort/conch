emoji_clock = function()
  hour = tonumber(os.date("%H")) % 12
  min = tonumber(os.date("%M"))
  if min < 15 then
    return hours[hour] .. " "
  elseif min < 45 then
    return half_hours[hour] .. " "
  else
    return hours[(hour + 1) % 12] .. " "
  end
end
